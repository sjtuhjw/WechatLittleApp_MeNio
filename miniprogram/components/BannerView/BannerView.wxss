.dyItem{ display: flex; padding: 10rpx 0; background: white; justify-content: space-between;border-radius: 30rpx;margin-bottom: 10rpx;border-color: #fac1b8;border-style: dashed;}
.dyItem .pic{width: 230rpx; height: 150rpx;border-radius: 20rpx;padding: 0 10rpx;}
.dyItem .pic image{width: 100%;height:100%;border-radius: 20rpx;}
.dyItem .txt{width: 430rpx; display: flex; flex-direction: column;justify-content: space-between;color: black;}
.dyItem .title{font-size: 34rpx;}
.dyItem .info{font-size: 26rpx;color: #888;}
.dyItem .info text{font-size: 22rpx;}